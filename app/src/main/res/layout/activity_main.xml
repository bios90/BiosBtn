<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:gravity="center"
    tools:context=".MainActivity">

    <com.dimfcompany.btn.BiosBtn
        android:id="@+id/btn_test"

        android:minWidth="190dp"
        app:btn_font="opbold.ttf"
        app:icon_color="@color/colorAccent"
        app:text_color="@android:color/white"
        app:gradient="true"
        app:icon_size_faw="12dp"
        app:icon_padding_vertical="4dp"
        app:icon_padding_horizontal="24dp"
        app:faw_text="@string/fa_exclamation"
        app:color_1="@android:color/holo_blue_dark"
        app:color_2="@android:color/holo_purple"
        app:btn_type="no_icon"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:text_padding_horizontal="12dp"
        app:background_color="@color/colorPrimary"
        app:corner_radius="4dp"
        app:gradient_direction="left_to_right"
        app:stroke_width="0dp">

    </com.dimfcompany.btn.BiosBtn>

</RelativeLayout>